function run(){
  TASK_FILE="Taskfile.sh"
  TASK_BASE_FILE="Taskfile.base.sh"

  if [ -f "$TASK_FILE" ]; then
    ./$TASK_FILE $@
  elif [ -f "$TASK_BASE_FILE" ]; then
    export TASK_FILE_BASE_RUN=true
    ./$TASK_BASE_FILE $@
  else
    echo "No task file found"
  fi
}

